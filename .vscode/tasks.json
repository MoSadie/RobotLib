    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build RobotLib",
            "type": "shell",
            "command": "./gradlew.bat build",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },

        {
            "label": "Build RobotLib (Offline)",
            "type": "shell",
            "command": "./gradlew.bat build --offline",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },

        {
            "label": "Run RioLog",
            "type": "shell",
            "command": "./gradlew.bat riolog --offline",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}